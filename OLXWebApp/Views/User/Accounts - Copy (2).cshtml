@{
    ViewData["Title"] = "Главная страница";
    ViewData["PageTitle"] = "Главная страница пользователя (пока пустая)";
}

    <main>

        <!--<section class="home_main">-->
        <header class="nav">
            <section class="connect_account">
                <p>Подключено 5 аккаунтов</p>
                <img alt="human" src="~/src/assets/images/icon_human.png" class="icon_human" />
            </section>
            <img alt="logo" src="~/src/assets/images/LOGO.png" class="settings_logo" />
            <section class="icons">
                <img alt="home" src="~/src/assets/images/home.png" class="icon" />
                <img alt="settings" src="~/src/assets/images/settings.png" class="icon" />
                <img alt="message" src="~/src/assets/images/message.png" class="icon_message" />
                <img alt="exit" src="~/src/assets/images/exit.png" class="icon_exit" />
            </section>
        </header>
     

        <section class="download_file_box" id="height_params">
            <form class="download_file_form" id="parameter">
                <p class="download_title">Загрузить объявления</p>
                <section class="box_1">
                    <p>Заголовок</p>
                    <input type="text" class="input_1" />
                </section>
                <section class="box_1">
                    <p>Описание</p>
                    <input type="text" class="input_1 desc_field" />
                </section>
                <section class="box_1">
                    <p>Параметры товара</p>
                    <input type="text" class="input_1 param_goods" />
                </section>
                <section class="box_1">
                    <p>Город</p>
                    <input type="text" class="input_1" />
                </section>
                <section class="box_5">
                    <section id="file_btn" onclick="getFile()">
                        <p>Фото</p>
                        <section class="right_clip">
                            <img src="~/src/assets/images/clip.png" class="clip" />
                        </section>
                    </section>
                    <section style='height: 0px;width: 0px; overflow:hidden;'>
                        <input id="upfile" type="file" value="upload" onchange="sub(this)" />
                    </section>
                </section>
                <input type="checkbox" id="hidden-checker" />
                <section class="box_1 parameter_btn block" onclick="change_height()">
                    <label class="block-toggler" for="hidden-checker"></label>
                    <p class="parameter_text">Дополнительные параметры</p>
                    <img src="~/src/assets/images/chevron_big_down.png" alt="chevron" class="chevron">
                </section>

                <section class="other_parameters hidden-block">
                    <section class="category_input dropbtn" style="margin-left: 1vw" onclick="dropBtn()">
                        <p>Категория</p>
                        <section class="right_clip" style="border-left: 0">
                            <img src="~/src/assets/images/chevron_big_down.png" class="chevron" />
                        </section>
                    </section>

                    <div id="myDropdown" class="dropdown-content">
                        <a href="#">Електроника</a>
                        <a href="#">Транспорт</a>
                        <a href="#">Обмен</a>
                    </div>

                    <section class="box_1" style="margin-left: 1vw">
                        <p>Цена</p>
                        <input type="text" class="input_1" />
                    </section>

                    <section class="box_1" style="margin-left: 1vw">
                        <p>Валюта</p>
                        <section class="money">
                            <section class="input_1 money_input dropbtn1" style="font-size: .73vw" onclick="dropBtn1()">
                            </section>
                            <section class="right_clip" style="border-left: 0">
                                <img src="~/src/assets/images/chevron_big_down.png" class="chevron money_chevron">
                            </section>
                        </section>
                    </section>

                    <div id="myDropdown1" class="dropdown-content1">
                        <a href="#">Грн</a>
                        <a href="#">Руб</a>
                        <a href="#">Доллар</a>
                    </div>

                    <section class="box_1" style="margin-left: 1vw">
                        <p>Состояние</p>
                        <section class="money">
                            <section class="input_1 money_input dropbtn2" style="font-size: .73vw" onclick="dropBtn2()">
                            </section>
                            <section class="right_clip" style="border-left: 0">
                                <img src="~/src/assets/images/chevron_big_down.png" class="chevron money_chevron">
                            </section>
                        </section>
                    </section>

                    <div id="myDropdown2" class="dropdown-content2">
                        <a href="#">Новый</a>
                        <a href="#">Б/У</a>
                    </div>

                    <section class="box_1" style="margin-left: 1vw">
                        <p>Часное лицо/Бизнес</p>
                        <section class="money">
                            <section class="input_1 money_input dropbtn3" style="font-size: .73vw" onclick="dropBtn3()">
                            </section>
                            <section class="right_clip" style="border-left: 0">
                                <img src="~/src/assets/images/chevron_big_down.png" class="chevron money_chevron">
                            </section>
                        </section>
                    </section>

                    <div id="myDropdown3" class="dropdown-content3">
                        <a href="#">Часное лицо</a>
                        <a href="#">Бизнес</a>
                    </div>

                    <section class="box_1" style="margin-left: 1vw">
                        <p>Местоположение</p>
                        <section class="money">
                            <section class="input_1 money_input dropbtn4" style="font-size: .73vw" onclick="dropBtn4()">
                            </section>
                            <section class="right_clip" style="border-left: 0">
                                <img src="~/src/assets/images/chevron_big_down.png" class="chevron money_chevron">
                            </section>
                        </section>
                    </section>

                    <div id="myDropdown4" class="dropdown-content4">
                        <a href="#">Киев</a>
                        <a href="#">Львов</a>
                        <a href="#">Одесса</a>
                    </div>
                </section>
                <button class="down_btn">
                    <p>Загрузить</p>
                </button>
            </form>
        </section>
        <footer>
            <img src="~/src/assets/images/LOGO.png" alt="logo" class="footer_logo" />
            <section class="footer_text">
                <p>Настройки</p>
                <p>Сообщение</p>
                <p>Добавить акаунт</p>
                <p>Загрузить объявления</p>
            </section>
            <section class="footer_icons">
                <img src="~/src/assets/images/facebook.png" alt="facebook" class="footer_icon_size" />
                <img src="~/src/assets/images/twitter.png" alt="twitter" class="footer_icon_size" />
                <img src="~/src/assets/images/telegram.png" alt="telegram" class="footer_icon_size" />
            </section>
        </footer>
    </main>